{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@Root/*": ["src/Root/*"],
      "@Hooks/*": ["src/Hooks/*"],
      "@Pages/*": ["src/Pages/*"],
      "@Styles/*": ["src/Styles/*"],
      "@Routes/*": ["src/Routes/*"],
      "@Assets/*": ["src/Assets/*"],
      "@Utils/*": ["src/Utils/*"],
      "@UI/*": ["src/Components/UI/*"],
      "@Middleware/*": ["src/Middleware/*"],
      "@Store/*": ["src/Store/*"],
      "@Components/*": ["src/Components/*"],
    }
  },
  "include": ["src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules"]
}